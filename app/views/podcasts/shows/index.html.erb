<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Title</th>
      <th>Description</th>
      <th>Language</th>
      <th>Copyright</th>
      <th>Last build date</th>
      <th>Explicit</th>
      <th>Author</th>
      <th>Summary</th>
      <th>Subtitle</th>
      <th>Primary category</th>
      <th>Secondary category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.name %></td>
        <td><%= show.email %></td>
        <td><%= show.title %></td>
        <td><%= show.description %></td>
        <td><%= show.language %></td>
        <td><%= show.copyright %></td>
        <td><%= show.last_build_date %></td>
        <td><%= show.explicit %></td>
        <td><%= show.author %></td>
        <td><%= show.summary %></td>
        <td><%= show.subtitle %></td>
        <td><%= show.primary_category %></td>
        <td><%= show.secondary_category %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

